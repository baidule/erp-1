<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
    <display-name>BetterLife Enterprise Application</display-name>
	<context-param>
        <param-name>log4jContextName</param-name>
        <param-value>betterlife-erp</param-value>
    </context-param>
	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>log4j2.xml</param-value>
	</context-param>
    <servlet>
   		<servlet-name>RestServlet</servlet-name>
   		<servlet-class>com.ibm.websphere.jaxrs.server.IBMRestServlet</servlet-class>
   		<init-param>
   			<param-name>javax.ws.rs.Application</param-name>
   			<param-value>io.betterlife.application.RestApplication</param-value>
   		</init-param>
   		<load-on-startup>5</load-on-startup>
   	</servlet>
	<filter>
		<filter-name>IndexFilter</filter-name>
		<filter-class>io.betterlife.application.IndexFilter</filter-class>
		<init-param>
			<param-name>url-pattern</param-name>
			<param-value>/dashboard,/user/*,/login/*,/logout/*,/fund/*,/fundCategory/*,/costCenter/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>IndexFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet-mapping>
   		<servlet-name>RestServlet</servlet-name>
   		<url-pattern>/rest/*</url-pattern>
   	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
