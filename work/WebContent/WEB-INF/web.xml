<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
    <display-name>BetterLife Enterprise Application</display-name>
	<context-param>
        <param-name>log4jContextName</param-name>
        <param-value>betterlife-erp</param-value>
    </context-param>
	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>log4j2.xml</param-value>
	</context-param>
	<filter>
		<filter-name>IndexFilter</filter-name>
		<filter-class>io.betterlife.application.filter.IndexFilter</filter-class>
		<init-param>
			<param-name>url-pattern</param-name>
			<param-value>/dashboard,/user/*,/login/*,/logout/*,/fund/*,/expenseCategory/*,/costCenter/*,/incomingCategory/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>IndexFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>PostgreSQL DB Connection</description>
		<res-ref-name>jdbc/PostgreSQLDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
